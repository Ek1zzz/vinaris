# VINaris Production Environment Configuration
# CRITICAL: Change all default values before deployment!

# Application Environment
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# Database Configuration (PostgreSQL for production)
DB_TYPE=postgresql
DB_HOST=your-db-host.com
DB_PORT=5432
DB_NAME=vinaris_production
DB_USER=vinaris_prod_user
DB_PASS=CHANGE_THIS_SECURE_PASSWORD_123!
DB_SSL=true

# JWT Security (CRITICAL: Generate secure random keys)
JWT_SECRET=CHANGE_THIS_TO_64_CHARACTER_RANDOM_STRING_FOR_PRODUCTION_SECURITY_12345678901234567890
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Password Security (Production Standards)
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true

# Rate Limiting (Production Limits)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_API_MAX=30

# File Upload Security
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=application/pdf
UPLOAD_QUARANTINE_PATH=./uploads/quarantine/
ENABLE_MALWARE_SCAN=true

# CORS Configuration (Update with your domain)
ENABLE_CORS=true
ALLOWED_ORIGINS=https://vinaris.ge,https://www.vinaris.ge

# Security Features (Enable for production)
ENABLE_2FA=false
ENABLE_ACCOUNT_LOCKOUT=true
ENABLE_IP_WHITELIST=false
ENABLE_DEVICE_FINGERPRINTING=true

# Encryption (CRITICAL: Generate secure keys)
ENCRYPTION_KEY=CHANGE_THIS_TO_32_CHARACTER_ENCRYPTION_KEY_12345678901234567890123456789012
DATA_ENCRYPTION_ENABLED=true

# Monitoring & Logging
LOG_LEVEL=warn
LOG_RETENTION_DAYS=90
ENABLE_SECURITY_LOGGING=true
ENABLE_AUDIT_LOGGING=true

# Email Configuration (Update with your SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=notifications@vinaris.ge
SMTP_PASS=CHANGE_THIS_EMAIL_PASSWORD
SMTP_SECURE=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=90
BACKUP_S3_BUCKET=vinaris-backups

# API Keys (Update with real keys)
VIN_API_KEY=CHANGE_THIS_TO_REAL_VIN_API_KEY
PAYMENT_GATEWAY_KEY=CHANGE_THIS_TO_REAL_PAYMENT_KEY

# Security Headers
CSP_ENABLED=true
HSTS_ENABLED=true
XSS_PROTECTION=true
CONTENT_TYPE_NOSNIFF=true

# Debug Mode (DISABLE for production)
DEBUG_MODE=false
